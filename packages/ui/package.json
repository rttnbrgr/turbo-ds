{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./globals.css": "./src/globals.css",
    "./postcss.config": "./postcss.config.mjs",
    "./tailwind.config": "./tailwind.config.ts",
    "./lib/*": "./src/lib/*.ts",
    "./hooks/*": "./src/hooks/*.ts",
    "./components/*": "./src/components/*.tsx"
  },
  "scripts": {
    "lint": "eslint .",
    "watch:tailwind": "npx tailwindcss -i ./src/globals.css -o ./dist/output.css --watch",
    "storybook": "concurrently \"pnpm run watch:tailwind\" \"pnpm run watch:storybook\"",
    "watch:storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:tailwind": "npx tailwindcss -i ./src/globals.css -o ./dist/output.css --minify",
    "build": "pnpm run build:tailwind && pnpm run build-storybook",
    "chromatic": "dotenv -e ../../.env -- npx chromatic --exit-zero-on-changes --token $CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@storybook/nextjs": "^8.3.5",
    "@tanstack/react-table": "^8.20.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "embla-carousel-react": "^8.3.0",
    "lucide-react": "^0.417.0",
    "next": "14.2.14",
    "react": "^18",
    "react-day-picker": "^9.1.0",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@hookform/resolvers": "^3.9.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/addon-storysource": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "chromatic": "^11.11.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.10.0",
    "eslint": "^8",
    "eslint-plugin-storybook": "^0.9.0",
    "postcss": "^8",
    "postcss-load-config": "^6",
    "postcss-loader": "^8.1.1",
    "storybook": "^8.3.5",
